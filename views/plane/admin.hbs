<div class="container col-md-8 text-center">
<table>
     <tr>
         <th colspan="3" class="h1 text-uppercase text-success">
            Figure List
         </th>
         <th>
            <a class="btn btn-primary" href="/plane/add">Add</a>
         </th>
         <th>
            <a class="btn btn-primary" href="/">Logout</a>
         </th>
         <th colspan="2">
            <form action="/plane/search" method="post">
                <div class="form-group">
                    <input class="form-control" type="search" placeholder="Search" name="name">
                </div>
            </form>
         </th>
         <th colspan="2">
            <select class="form-control" name="sort" id="" onchange="window.location.href=this.value">
                <option value="">Sort by</option>
                <option value="/plane/priceasc">Sort by price</option>
                <option value="/plane/pricedsc">Sort by price decrease</option>
            </select>
         </th>
      </tr>
    <tr>
        <th>Name</th>
        <th>Material</th>
        <th>Color</th>
        <th>Price</th>
        <th>Image</th>
        <th>Menu</th>
    </tr>
    {{#each planes }}
    <tr>
        <td>{{ name }}</td>
        <td>{{ color }}</td>
        <td>{{ material }}</td>
        <td>${{ price }}</td>
        <td>
            <a href="/plane/detail/{{_id}}"> <img src="{{image}}" width="150" height="150"></a> 
        </td>
        <td>
            <a class="btn btn-warning" href="/plane/edit/{{_id}}">Edit</a>
            <a class="btn btn-danger" href="/plane/delete/{{_id}}"
            onclick="return confirm('Are you sure to delete this student?');">Delete</a>
        </td>
    </tr> 
    {{/each}}
   
</table>
</div>
