<form action="/plane/edit/{{figure._id}}" method="post" class="container col-md-8 card">
<h1 class="text-danger text-center">Edit Plane</h1>
    <div class="form-group mt-3">
        <label for="name" class="text-primary"> Name</label>
        <input class="form-control" type="text" name="name" id="" required minlength="3" maxlength="30" value="{{figure.name}}">
    </div>
    <div class="form-group mt-3">
        <label for="dob" class="text-primary">Color</label>
        <input class="form-control" type="text" value="{{plane.height}}" name="plane" id="" required>
    </div>
    <div class="form-group mt-3">
        <label for="gpa" class="text-primary">Price</label>
        <input class="form-control" type="number" value="{{plane.price}}" name="price" id="" required min="0">
    </div>
    <div class="form-group mt-3">
        <label for="gender" class="text-primary">Material</label>
        {{#equal plane.material "plastic"}}
                 <input type="radio" name="material" value="plastic" id="" checked="true">Plastic
                <input type="radio" name="material" value="glass" id="">Glasse
        {{/equal}}
        {{#equal plane.material "glass"}}
            <input type="radio" name="material" value="plastic" id="" >Plastic
                <input type="radio" name="material" value="glass" id="" checked="true">Glasse
        {{/equal}}
    </div>
    <div class="form-group mt-3">
        <label for="dob" class="text-primary"> Description</label>
        <input class="form-control" type="text"  name="description" value="{{plane.description}}" id="" required>
    </div>
    <div class="form-group mt-3">
        <label for="image" class="text-primary">Image</label>
        <img src="{{plane.image}}" width="100" height="100">
        <input class="form-control" type="url" value="{{plane.image}}"  name="image" id="" required>
    </div>
    <div class="form-group mt-3 mb-4 text-center">
        <input class="btn btn-primary" type="submit" value="Edit">
    </div>
</form>